@page
@model ChoctawGivingCircle.Pages.Requests.IndexModel
@{
    ViewData["Title"] = "Community Requests";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-0">Assistance Requests</h1>
            <p class="text-muted mb-0">Open and approved needs from community members.</p>
        </div>
        <a class="btn btn-primary" asp-page="/Requests/Create">Share a Request</a>
    </div>

    @if (Model.Requests.Count == 0)
    {
        <div class="alert alert-info">
            No open requests yet. Check back soon or encourage a community member to share a need.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Priority</th>
                        <th>Estimated Cost</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model.Requests)
                    {
                        <tr>
                            <td>@request.Title</td>
                            <td>@request.Category</td>
                            <td>
                                <span class="badge text-bg-secondary">@request.Priority</span>
                            </td>
                            <td>@request.EstimatedCost.ToString("C")</td>
                            <td>@request.Status</td>
                            <td class="text-end">
                                <a asp-page="/Requests/Details" asp-route-id="@request.Id" class="btn btn-outline-primary btn-sm">
                                    Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
