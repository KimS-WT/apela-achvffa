@page
@model ChoctawGivingCircle.Pages.Requests.CreateModel
@{
    ViewData["Title"] = "Share an Assistance Request";
}

<div class="container py-4">
    <h1 class="h3 mb-3">Share an Assistance Request</h1>
    <p class="text-muted">Tell donors what you need. All submissions are reviewed by admins before going live.</p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (TempData["ModelErrors"] != null)
    {
        <div class="alert alert-danger">@TempData["ModelErrors"]</div>
    }

    <form method="post" class="card shadow-sm">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Input.Title" class="form-label"></label>
                <input asp-for="Input.Title" class="form-control" />
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Description" class="form-label"></label>
                <textarea asp-for="Input.Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>

            
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Input.Category" class="form-label"></label>
                    <select asp-for="Input.Category"
                            asp-items="Html.GetEnumSelectList<ChoctawGivingCircle.Models.AssistanceCategory>()"
                            class="form-select">
                    </select>
                    <span asp-validation-for="Input.Category" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Input.Priority" class="form-label"></label>
                    <select asp-for="Input.Priority"
                            asp-items="Html.GetEnumSelectList<ChoctawGivingCircle.Models.AssistancePriority>()"
                            class="form-select">
                    </select>
                    <span asp-validation-for="Input.Priority" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3 mt-1">
                <div class="col-md-6">
                    <label asp-for="Input.EstimatedCost" class="form-label"></label>
                    <input asp-for="Input.EstimatedCost" class="form-control" />
                    <span asp-validation-for="Input.EstimatedCost" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Input.NeededByDate" class="form-label"></label>
                    <input asp-for="Input.NeededByDate" class="form-control" />
                    <span asp-validation-for="Input.NeededByDate" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-page="/Requests/My" class="btn btn-link">Cancel</a>
            <button type="submit" class="btn btn-primary">Submit Request</button>
        </div>
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
