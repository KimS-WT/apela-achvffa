@page
@model ChoctawGivingCircle.Pages.Admin.Contributions.IndexModel
@{
    ViewData["Title"] = "Contribution Management";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-0">Contributions</h1>
            <p class="text-muted mb-0">Allocate donor gifts to matching assistance requests or the general fund.</p>
        </div>
        <a class="btn btn-outline-secondary" asp-page="/Admin/Users/Index">Manage Users</a>
    </div>

    @if (TempData["StatusMessage"] is string statusMessage)
    {
        <div class="alert alert-success">@statusMessage</div>
    }

    <div class="alert alert-info">
        General fund balance: <strong>@Model.GeneralFundBalance.ToString("C")</strong>. Allocate unassigned donations as needs emerge.
    </div>

    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Amount</th>
                    <th>Type</th>
                    <th>Target</th>
                    <th>Source</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contribution in Model.Contributions)
                {
                    <tr>
                        <td>@contribution.CreatedAt.ToLocalTime().ToString("g")</td>
                        <td>@contribution.Amount.ToString("C")</td>
                        <td>@contribution.ContributionType</td>
                        <td>
                            @if (contribution.IsGeneralFund || contribution.AssistanceRequest is null)
                            {
                                <span class="badge text-bg-warning">General Fund</span>
                            }
                            else
                            {
                                <div class="d-flex flex-column">
                                    <span class="fw-semibold">@contribution.AssistanceRequest.Title</span>
                                    <small class="text-muted">Request #@contribution.AssistanceRequest.Id</small>
                                </div>
                            }
                        </td>
                        <td>
                            @if (string.IsNullOrEmpty(contribution.DonorUserId))
                            {
                                @:Anonymous
                            }
                            else
                            {
                                @(contribution.DonorUser?.DisplayName ?? contribution.DonorUser?.Email ?? contribution.DonorUserId)
                            }
                        </td>
                        <td class="text-end">
                            @if (contribution.IsGeneralFund)
                            {
                                <a class="btn btn-sm btn-primary"
                                   asp-page="/Admin/Contributions/Allocate"
                                   asp-route-id="@contribution.Id">Allocate</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
