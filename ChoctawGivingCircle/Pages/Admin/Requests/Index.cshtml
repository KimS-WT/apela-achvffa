@page
@model ChoctawGivingCircle.Pages.Admin.Requests.IndexModel
@{
    ViewData["Title"] = "Manage Assistance Requests";
}

<div class="container py-4">
    <h1 class="h3 mb-3">All Assistance Requests</h1>
    <p class="text-muted">Review submissions, adjust statuses, or remove outdated entries.</p>

    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Requester</th>
                    <th>Category</th>
                    <th>Priority</th>
                    <th>Status</th>
                    <th>Updated</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model.Requests)
                {
                    <tr>
                        <td>@request.Title</td>
                        <td>@request.UserId</td>
                        <td>@request.Category</td>
                        <td><span class="badge text-bg-secondary">@request.Priority</span></td>
                        <td>@request.Status</td>
                        <td>@request.UpdatedAt.ToLocalTime().ToString("g")</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" asp-page="/Admin/Requests/Details" asp-route-id="@request.Id">Details</a>
                            <a class="btn btn-sm btn-primary" asp-page="/Admin/Requests/Edit" asp-route-id="@request.Id">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-page="/Admin/Requests/Delete" asp-route-id="@request.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
