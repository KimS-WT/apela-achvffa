@page
@model ChoctawGivingCircle.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "User Management";
}

<div class="container py-4">
    <h1 class="h3 mb-4">Community Accounts</h1>
    <div class="alert alert-info">
        Only admins can view this page. Use it to keep track of supporters, requesters, and staff roles.
    </div>

    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Display Name</th>
                    <th>Roles</th>
                    <th>Tribal Member</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@(string.IsNullOrWhiteSpace(user.DisplayName) ? "â€”" : user.DisplayName)</td>
                        <td>@user.Roles</td>
                        <td>
                            @if (user.IsTribalMember)
                            {
                                <span class="badge text-bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge text-bg-secondary">No</span>
                            }
                        </td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" asp-page="/Admin/Users/Edit" asp-route-id="@user.Id">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-page="/Admin/Users/Delete" asp-route-id="@user.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
